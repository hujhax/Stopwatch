!!!
/ HTML5 doctype
%html
  %head
    %title Stopwatch
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
      %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0", :name => "viewport"}/
      :css
        /* Prevent copy paste for all elements except text fields */
        *  { -webkit-user-select:none; -webkit-tap-highlight-color:rgba(255, 255, 255, 0); }
        input, textarea  { -webkit-user-select:text; }
        body { background-color:white; color:black }
      %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}
      %link{:href => "css/bootstrap-theme.min.css", :rel => "stylesheet"}/
      %script{:src => "intelxdk.js"}
      %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js"}
      %script{:src => "./js/angular-setup.js"}
      %script{:src => "./js/stopwatch-controller.js"}
      :javascript        
        /* This code is used to run as soon as Intel activates */
        var onDeviceReady=function(){
        //hide splash screen
        intel.xdk.device.hideSplashScreen();
        };
        document.addEventListener("intel.xdk.device.ready",onDeviceReady,false);
  %body{"ng-app" => "StopwatchApp"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
    / Include all compiled plugins (below), or include individual files as needed
    %script{:src => "js/bootstrap.min.js"}
    %div{"ng-controller" => "StopwatchController"}
      .jumbotron
        %h1 {{time}}
        %button.btn.btn-lg.btn-default{:type => "button"} 5 min
        %button.btn.btn-lg.btn-default{:type => "button"} 10 min
        %button.btn.btn-lg.btn-default{:type => "button"} 30 min
        %button.btn.btn-lg.btn-default{:type => "button"} Custom
        %input.form-control{:placeholder => "15", :type => "text"}/
        %button.btn.btn-lg.btn-danger{:type => "button"} Pause/Resume
        %ul.list-group
          %li.list-group-item Set time to 5 min
          %li.list-group-item Paused
          %li.list-group-item Resumed
